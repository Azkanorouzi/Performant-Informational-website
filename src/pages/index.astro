---
import MainLayout from "../layouts/MainLayout.astro";
import ProjectShowCaseContents from "../components/ProjectsShowCase/ProjectShowCaseContents.astro";
import HeaderContent from "../components/header/HeaderContent.astro";
import ProductShowCaseContents from "../components/ProductShowCase/ProductShowCaseContents.astro";
import AuthorityShowCaseContents from "../components/AuthorityShowCase/AuthorityShowCaseContents.astro";
import ServicesShowCaseContents from "../components/ServicesShowCase/ServicesShowCaseContents.astro";
import PopularityShowCaseContents from "../components/PopularityShowCase/PopularityShowCaseContents.astro";
import Loader from "../components/ui/Loader.astro";
import MetaTags from "../metaTags/MetaTags";
---

<MainLayout title="sav-ghateh">
  <MetaTags pageTitle={"Sav Ghateh"} description={"We offer the discovering tools you need, with unmatched quality, and great performance"} lang={'en'} facebookImg={""} faceBookUrl={''} keywords={"drilling tools, sav ghateh, discovering tools, buy discovering tools, good quality discovering tool, ساو قطعه, خرید لوازم معدن, gold mining, buy mining tools, mining tools, good quality mining tools"} slot="metaTags"/>
  <Loader slot="loader"/>
  <header class="lg:h-[90vh] h-[50vh] text-xl flex flex-col" slot="header">
    <HeaderContent />
  </header>

  <section slot="productsShowCase" class="relative">
    <ProductShowCaseContents />
    <div
      class="w-full h-20 lg:h-48 bottom-0 bg-secondary absolute border-none border-secondary"
      style={{ zIndex: "0" }}
    >
    </div>
  </section>

  <section slot="authorityShowCase">
    <AuthorityShowCaseContents />
  </section>
  <section slot="servicesShowCase" class="relative">
    <ServicesShowCaseContents />
  </section>
  <section slot="popularityShowCase" class="relative">
    <ProjectShowCaseContents />
    <div
      class="w-full h-28 bottom-0 bg-secondary absolute"
      style={{ zIndex: "0" }}
    >
    </div>
  </section>
  <section slot="popularityShowCase">
    <PopularityShowCaseContents />
  </section>
  <!-- <section slot="popularityShowCase">
    <BlogShowCaseContent />
  </section> -->
</MainLayout>

