---
import Navbar from '../components/header/NavbarLayout.astro';
import Footer from '../components/Footer/Footer.astro';
import '../index.css'
import 'bootstrap-icons/font/bootstrap-icons.css';
import Loader from '../components/ui/Loader.astro';
import Logo2 from '../assets/logo2.svg'
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={Logo2.src} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions slot='transition'/>
	</head>
	<body class="font-TekoRegular text-secondary  relative bg-primary">
		<slot name="loader" />
		<Navbar slot='navbar' />
		<!-- Header area -->
		<slot name="header" />
		<main>
			<slot name="productsShowCase2" />
			<slot name="productsShowCase" />
			<slot name="authorityShowCase" />
			<slot name="servicesShowCase" />
			<slot name="popularityShowCase" />
			<slot name="reviewShowCase" />
		</main>

		<Footer />
	</body>
</html>

